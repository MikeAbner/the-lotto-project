.top-bar-top
  .logo
    = image_tag "/images/cute-monster.png", {:style => "width: 100px;"}
    = image_tag "/images/logo-long.png"
  %table.top-menu
    %tr
      %td
        &nbsp;
        - if !current_user.nil?
          = link_to 'Logout', destroy_user_session_path
        &nbsp;
.top-bar-bottom
  - if user_signed_in?
    %table{:style => "padding-left: 30px;float:left;"}
      %tr
        %td{:style => "border-right: 1px solid #aaaaaa;"}
          &nbsp;
          = link_to 'Home', '/'
          &nbsp;
        %td{:style => "border-right: 1px solid #aaaaaa;"}
          &nbsp;
          = link_to 'Blog', '/blog'
          &nbsp;
        %td{:style => "border-right: 1px solid #aaaaaa;"}
          &nbsp;
          = link_to 'About', '/about'
          &nbsp;
        - if current_user && current_user.admin
          %td{:style => "border-right: 0px solid #aaaaaa;"}
            &nbsp;
            = link_to 'Admin', '/admin'
            &nbsp;

  %div.cb

  
