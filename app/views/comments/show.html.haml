.comment-approval.widget.rounded-corners
  .header
    .title
      %h4
        = "Comments for '#{@post.title}'"
    .menu
    %br.cb
  %br.cb
  .text
    = link_to 'Return to Post', blog_post_path(@post.id)
    - @comments.each do |c|
      - form_for c do |f|
        = f.hidden_field :blog_post_id
        %p
          = f.label :user_id
          %b
            - if c.user.nil?
              = "Guest"
            - else
              - if !c.user.nickname.blank?
                = c.user.nickname
              - else
                = c.user.email
        %p
          = f.label :content
          %b
            =h c.content
        %p
          - if c.approved
            = f.submit 'Unapprove'
          - else
            = f.submit 'Approve'
          = link_to 'Delete', c, :confirm => 'Are you sure you want to delete this comment?', :method => :delete
      %hr
  %br.cb
  %br.cb