.post
  .header
    .title
      %h4
        =h post.title
    .menu
      %h4
        - if post.pub_date.nil?
          DRAFT
        - else
          =h post.pub_date.to_s(:blog_post_date)
    %br.cb
  - if !current_user.nil?  
    - if current_user.admin
      .admin-menu
        = link_to 'Edit', edit_blog_post_path(post)
        = link_to 'Delete', post, :confirm => 'Are you sure you want to delete this blog post and all of its comments?', :method => :delete
        = link_to "#{post.unapproved_comments} unapproved comments", comment_path(post.id)
  .text
    - if short
      - if post.content.size > 500
        = "#{post.content.slice(0..500)}..."
        - else
        = post.content
    - else
      = post.content
    - if short
      %p
        = link_to 'Continue Reading', blog_post_path(post.id)
  - if !short
    .comments
      %h4 Comments
      - @post.comments.each do |comment|
        .comment
          - if comment.approved
            - if comment.user
              - if !comment.user.nickname.blank?
                %b
                  =h "#{comment.user.nickname} said "
              - else
                %b
                  =h "A TLP user said "
            - else
              %b
                =h "A Guest said "
            =h "\"#{comment.content}\""
            = " on #{comment.created_at.to_s(:blog_comment_date)}"
      .comment-form
        - form_for @comment do |f|
          - fields_for @post do |p|
            = p.hidden_field :id
          - if current_user
            -fields_for current_user do |c|
              = c.hidden_field :id
          %p
            = f.label 'Comment'
            = f.text_area :content, {:style => "vertical-align: middle;", :rows => "5"}
          %p
            = f.submit "Add comment"